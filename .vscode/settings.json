{
    // Python
    "files.exclude": {
        "**/*.pyc": true,
        "*.log": true,
        "*.egg-info": true,
    },
    "[python]": {
        "editor.formatOnSave": true
    },
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--strict"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": true,
}
